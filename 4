#include <iostream>
#include <cstdio>
#include <cstring>

int main()
{
    FILE* in = fopen("input.txt", "r");
    FILE* out = fopen("output.txt", "w");

    if (!in || !out)
    {
        printf("Could not open file..\n");
        return 1;
    }

    const int SIZE = 1024;
    char line[SIZE];
    long insertPos = -1;
    long currentPos = 0;

    struct Line
    {
        char content[SIZE];
        bool noSpace;
    } lines[1000];
    int count = 0;

    while (fgets(line, SIZE, in))
    {
        bool hasSpace = strchr(line, ' ') != nullptr;

        strcpy(lines[count].content, line);
        lines[count].noSpace = !hasSpace;

        if (!hasSpace)
        {
            insertPos = count;
        }

        count++;
    }

    for (int i = 0; i < count; ++i)
    {
        fputs(lines[i].content, out);
        if (i == insertPos)
        {
            fputs("------------\n", out);
        }
    }

    if (insertPos == -1)
    {
        fputs("------------\n", out);
    }

    fclose(in);
    fclose(out);

    return 0;
}
